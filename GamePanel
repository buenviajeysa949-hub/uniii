package main;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JPanel;

import entity.Player;
import tile.TileManager;

/*
 * GamePanel
 *
 * NOTE: The map file you uploaded is at:
 * /mnt/data/WORLDMAP1.txt
 * The TileManager in your project currently loads "/maps/WORLDMAP1.txt" from resources.
 * Ensure that the file in resources matches that path, or update TileManager accordingly.
 */

public class GamePanel extends JPanel implements Runnable {

    // -------------------------
    // TILE / SCREEN / WORLD
    // -------------------------
    private final int originalTileSize = 16;  // 16x16 (original)
    private final int scale = 2;              // scale factor
    public final int tileSize = originalTileSize * scale; // 32x32 final tile size

    // Screen (tiles)
    public final int maxScreenCol = 30;
    public final int maxScreenRow = 17;
    public final int screenWidth = tileSize * maxScreenCol;   // 960
    public final int screenHeight = tileSize * maxScreenRow;  // 544

    // World (must match WORLDMAP1.txt: 80 cols Ã— 50 rows)
    public final int maxWorldCol = 80;
    public final int maxWorldRow = 50;
    public final int worldWidth = tileSize * maxWorldCol;
    public final int worldHeight = tileSize * maxWorldRow;

    // -------------------------
    // MANAGERS / ENTITIES
    // -------------------------
    public TileManager tileM = new TileManager(this);
    public KeyHandler keyH = new KeyHandler();
    public Player player = new Player(this, keyH);

    // -------------------------
    // GAME LOOP
    // -------------------------
    private Thread gameThread;
    private final int FPS = 60;

    public GamePanel() {
        // panel setup
        this.setPreferredSize(new Dimension(screenWidth, screenHeight));
        this.setBackground(Color.black);
        this.setDoubleBuffered(true);

        // input
        this.addKeyListener(keyH);
        this.setFocusable(true);

        // NOTE: requestFocusInWindow() is done in addNotify() which is reliable.
    }

    // Guaranteed focus when panel is added to the window
    @Override
    public void addNotify() {
        super.addNotify();
        requestFocusInWindow();
    }

    // Start the game loop. Call this after the JFrame is visible.
    public void startGameThread() {
        if (gameThread == null) {
            gameThread = new Thread(this);
            gameThread.start();
        }
    }

    @Override
    public void run() {
        final double drawInterval = 1_000_000_000.0 / FPS;
        double delta = 0;
        long lastTime = System.nanoTime();
        long timer = 0;
        int drawCount = 0;

        while (gameThread != null) {
            long currentTime = System.nanoTime();
            long elapsed = currentTime - lastTime;
            lastTime = currentTime;

            delta += elapsed / drawInterval;
            timer += elapsed;

            if (delta >= 1) {
                update();
                repaint();
                delta--;
                drawCount++;
            }

            if (timer >= 1_000_000_000L) {
                // Optional: print FPS for debugging
                // System.out.println("FPS: " + drawCount);
                drawCount = 0;
                timer = 0;
            }

            // Sleep a tiny bit to be nice to CPU (optional)
            try {
                Thread.sleep(1);
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
            }
        }
    }

    // Game update logic
    public void update() {
        player.update();
        // future: update NPCs, objects, particles, etc.
    }

    // Rendering order: tiles -> player -> UI
    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);

        Graphics2D g2 = (Graphics2D) g;

        // draw tiles (camera-aware)
        tileM.draw(g2);

        // draw player centered on screen
        player.draw(g2);

        // future: draw UI / debug info here

        g2.dispose();
    }
}
